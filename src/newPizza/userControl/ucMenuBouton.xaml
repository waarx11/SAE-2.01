<UserControl x:Class="newPizza.ucMenuBouton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:newPizza"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="220">

    <Button BorderThickness="0,0,0,2" BorderBrush="Black" Background="{StaticResource couleurPrincipale}" Width="300" Height="80" HorizontalAlignment="Left" Style="{x:Null}" Click="MenuBouton_Click">
        <WrapPanel Width="300">
            <Image Source="..\img\buttons\news.png" Width="50" Height="50" VerticalAlignment="Center" Margin="15,0,15,0" x:Name="ucBoutonMenuIMG"/>
            <TextBlock Text="Nouveautés" FontSize="25" VerticalAlignment="Center" Margin="0,0,15,0"  x:Name="ucBoutonMenuTEXT"/>
        </WrapPanel>
    </Button>
    
</UserControl>
